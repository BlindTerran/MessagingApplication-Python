 {% extends 'base.jinja' %}
 
 {% block content %} 
 <div class="container mt-5">
    <h1 class="gradient-text text-center">WisdomExch</h1>
    <div class="d-flex justify-content-center">
        <p><a class="btn btn-secondary mr-2" href={{ url_for('signup') }}> Sign Up</a></p>
