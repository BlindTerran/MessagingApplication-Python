            </svg>                        
        </div>
    </div>
</div>


<!-- TODO: [style] instead of using header tag for each section title, use normal text with proper size properties, this 
    eliminates the inherent margin of the headers looks better -->

<div class="main-body-section">
    <div>
        <h2 class="section-title">Student Management</h2>
        <hr class="horizontal-divider">
        <div id="friends-container">
            <ul>
                {% for user, permission in user_dict.items() %}
                    <li>
                        {{ user }}
                            {% if permission >= 0 %}
                            <button onclick="muteUser('{{user}}')">Mute</button> 
                            {% else%}
                            <button onclick="unmuteUser('{{user}}')">Unmute</button>
                            {% endif %}
                    </li>
                {% endfor %}
            </ul>
            
            <table id="friends-table">
                <thead>
                    <tr>
                    </tr>
                </thead>
                <tbody id="friends">
    
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <div style="display: flex; justify-content: space-between;">
            <h3 class="section-title">Post Management</h3>
        </div>
        <hr class="horizontal-divider">
        <div id="friend-requests-container">
            <ul>
                {% for article, comments in article_dict.items() %}
                <li>
                    <b>{{article.title}}</b></br>{{article.author}}
                    <input id="new_title_" placeholder="new title"/>
                    <input id="new_content_" placeholder="new title"/>
                    <button onclick="modifyArticle({{article.id}})">Edit</button> 
                    <button onclick="deleteArticle({{article.id}})">Delete</button> 
                    <button onclick="">manage comments</button>
                </li>
                {% endfor %}
            </ul>

            <table id="friend-requests-table">
                <thead>
                    <tr>
                        
                    </tr>
                </thead>
                <tbody id="friend-requests">
    
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/static/js/libs/socket.io.min.js"></script>
<script>
    const socket = io();
    async function deleteArticle(articleId) {
        let username = "{{ username }}";
        let response = await axios.post('/delete_article', { username: username, article_id: articleId });
        if (response.data.success) {
            window.location.reload();
        } else {
            alert(response.data.error);
        }
    }

    async function modifyArticle(articleID) {
        let username = "{{ username }}";
        let new_title = document.getElementById('new_title_').value;
        let new_content = document.getElementById('new_content_').value;
        let response = await axios.post('/modify_article', { articleID: articleID, username: username, new_title: new_title, new_content: new_content});
        if (response.data.success) {
            window.location.reload();
        } 
        else {
            alert(response.data.error);
        }
    }

    async function muteUser(username) {
        let response = await axios.post('/mute_user', { username: username});
        if (response.data.success) {
            window.location.reload();
        } else {
            alert(response.data.error);
        }
    }
    async function unmuteUser(username) {
        let response = await axios.post('/unmute_user', { username: username});
        if (response.data.success) {
            window.location.reload();
        } else {
            alert(response.data.error);
        }
    }

</script>


{% endblock %}
